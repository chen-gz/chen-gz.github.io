---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

const allEntries = await getCollection("riemannian-geometry", ({ id }) => {
    return !id.startsWith("datalab-") && id !== "table-of-contents.md" && !id.endsWith("/_index.md");
});

const entries = allEntries.sort((a, b) => a.slug.localeCompare(b.slug));

const entriesByChapter = entries.reduce(
    (acc, entry) => {
        const chapterName = entry.slug.split("/")[0];
        if (!acc[chapterName]) {
            acc[chapterName] = [];
        }
        acc[chapterName].push(entry);
        return acc;
    },
    {} as Record<string, typeof entries>,
);
---

<Layout title="Riemannian Geometry">
    <main class="container mx-auto p-4 md:p-8">
        <h1 class="text-4xl font-bold text-center mb-8 text-gray-900 dark:text-gray-100">Riemannian Geometry</h1>
        <div class="overflow-x-auto shadow-md sm:rounded-lg">
            <table class="min-w-full bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700">
                <thead class="bg-gray-50 dark:bg-gray-700">
                    <tr>
                        <th
                            scope="col"
                            class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider"
                            >Chapter</th
                        >
                        <th
                            scope="col"
                            class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider"
                            >Title</th
                        >
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
                    {
                        Object.entries(entriesByChapter).map(([chapter, chapterEntries]) => (
                            <>
                                {chapterEntries.map((entry, index) => (
                                    <tr
                                        class="hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors duration-200 cursor-pointer"
                                        onclick={`window.location.href = '/riemannian-geometry/${entry.slug}/'`}
                                    >
                                        {index === 0 && (
                                            <td
                                                class="px-6 py-4 whitespace-nowrap capitalize text-sm font-medium text-gray-900 dark:text-gray-100"
                                                rowSpan={chapterEntries.length}
                                            >
                                                {chapter.replace(/-/g, " ")}
                                            </td>
                                        )}
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600 dark:text-gray-300">
                                            {entry.data.title || entry.slug.split("/").pop().replace(/-/g, " ")}
                                        </td>
                                    </tr>
                                ))}
                            </>
                        ))
                    }
                </tbody>
            </table>
        </div>
    </main>
</Layout>
