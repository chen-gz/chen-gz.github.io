---
import Layout from '../../layouts/Layout.astro';
import { getCollection, type CollectionEntry } from 'astro:content';

const allPosts = await getCollection('blog');

// Group chapters by post
const posts = allPosts.reduce(
  (acc: Record<string, CollectionEntry<'blog'>[]>, post) => {
    const postSlug = post.slug.split('/')[0];
    if (!acc[postSlug]) {
      acc[postSlug] = [];
    }
    acc[postSlug].push(post);
    return acc;
  },
  {},
);

// Sort chapters within each post
for (const postSlug in posts) {
  posts[postSlug].sort((a, b) => (a.data.chapter || 0) - (b.data.chapter || 0));
}
---

<Layout title="My Blog">
  <main class="container mx-auto p-4 md:p-8">
    <h1 class="text-4xl font-bold text-center mb-8 text-gray-900 dark:text-gray-100">My Blog</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {Object.entries(posts).map(([postSlug, chapters]) => {
        const firstChapter = chapters[0];
        return (
          <a href={`/blog/${firstChapter.slug}/`} class="block bg-white dark:bg-gray-800 rounded-lg shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-300 overflow-hidden border border-gray-100 dark:border-gray-700">
            <div class="p-6">
              <h2 class="text-2xl font-bold mb-2 capitalize text-gray-800 dark:text-gray-200">{postSlug.replace(/-/g, ' ')}</h2>
              <p class="text-gray-600 dark:text-gray-400 text-sm mb-4">
                {firstChapter.data.pubDate && `Published on ${firstChapter.data.pubDate.toLocaleDateString()}`}
              </p>
              {firstChapter.data.description && <p class="text-gray-700 dark:text-gray-300 mb-4 line-clamp-3">{firstChapter.data.description}</p>}
              <div class="flex justify-between items-center text-sm text-gray-500 dark:text-gray-400">
                <span>{chapters.length} Chapters</span>
                <span class="text-blue-500 dark:text-blue-400 group-hover:underline">Read More &rarr;</span>
              </div>
            </div>
          </a>
        )
      })}
    </div>
  </main>
</Layout>
