---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog');

// Group chapters by post
const posts = allPosts.reduce((acc, post) => {
  const postSlug = post.slug.split('/')[0];
  if (!acc[postSlug]) {
    acc[postSlug] = [];
  }
  acc[postSlug].push(post);
  return acc;
}, {});

// Sort chapters within each post
for (const postSlug in posts) {
  posts[postSlug].sort((a, b) => a.data.chapter - b.data.chapter);
}
---

<Layout title="My Blog">
  <main class="container mx-auto p-4 md:p-8">
    <h1 class="text-4xl font-bold text-center mb-8">My Blog</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {Object.entries(posts).map(([postSlug, chapters]) => {
        const firstChapter = chapters[0];
        return (
          <a href={`/blog/${firstChapter.slug}/`} class="block bg-white rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300 overflow-hidden">
            <div class="p-6">
              <h2 class="text-2xl font-bold mb-2 capitalize">{postSlug.replace(/-/g, ' ')}</h2>
              <p class="text-gray-600 text-sm mb-4">
                Published on {firstChapter.data.pubDate.toLocaleDateString()}
              </p>
              <p class="text-gray-700 mb-4">{firstChapter.data.description}</p>
              <div class="flex justify-between items-center text-sm text-gray-500">
                <span>{chapters.length} Chapters</span>
                <span>Read More &rarr;</span>
              </div>
            </div>
          </a>
        )
      })}
    </div>
  </main>
</Layout>
