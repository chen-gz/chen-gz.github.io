---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

const allEntries = await getCollection("codeforces", ({ id }) => {
    return (
        !id.startsWith("datalab-") &&
        id !== "table-of-contents.md" &&
        !id.endsWith("/_index.md") &&
        !id.endsWith(".zh-cn.md")
    );
});

const entries = allEntries.sort((a, b) => a.slug.localeCompare(b.slug));

const entriesByChapter = entries.reduce(
    (acc, entry) => {
        const chapterName = entry.slug.split("/")[0];
        if (!acc[chapterName]) {
            acc[chapterName] = [];
        }
        acc[chapterName].push(entry);
        return acc;
    },
    {} as Record<string, typeof entries>,
);

// Sort rounds (chapters) in descending order (assuming newer rounds have higher numbers or should be first)
// Or keep it alphabetical/locale compare as per original logic, but Codeforces Round numbers might need numeric sort if format is "Round X".
// The default string sort might be okay for "Codeforces Round 1034" vs "1035", but "Round 9" vs "Round 10" would be wrong.
// Given the folder names are like "Codeforces Round 1034 (Div. 3)", string sort works for same-length numbers.
// Let's stick to default key sort for now or reverse it if we want newest first.
const sortedChapters = Object.keys(entriesByChapter).sort((a, b) => b.localeCompare(a, undefined, { numeric: true }));

---

<Layout title="Codeforces">
    <main class="container mx-auto p-4 md:p-8">
        <h1 class="text-4xl font-bold text-center mb-8 text-gray-900 dark:text-gray-100">Codeforces</h1>
        <div class="overflow-x-auto shadow-md sm:rounded-lg">
            <table class="min-w-full bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700">
                <thead class="bg-gray-50 dark:bg-gray-700">
                    <tr>
                        <th
                            scope="col"
                            class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider w-1/3"
                            >Round</th
                        >
                        <th
                            scope="col"
                            class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider"
                            >Problem</th
                        >
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
                    {
                        sortedChapters.map((chapter) => (
                            <>
                                {entriesByChapter[chapter].map((entry, index) => (
                                    <tr
                                        class="hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors duration-200 cursor-pointer"
                                        onclick={`window.location.href = '/codeforces/${entry.slug}/'`}
                                    >
                                        {index === 0 && (
                                            <td
                                                class="px-6 py-4 whitespace-nowrap capitalize text-sm font-medium text-gray-900 dark:text-gray-100 align-top"
                                                rowSpan={entriesByChapter[chapter].length}
                                            >
                                                {chapter}
                                            </td>
                                        )}
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600 dark:text-gray-300">
                                            {entry.data.title || entry.slug.split("/").pop().replace(/-/g, " ")}
                                        </td>
                                    </tr>
                                ))}
                            </>
                        ))
                    }
                </tbody>
            </table>
        </div>
    </main>
</Layout>
