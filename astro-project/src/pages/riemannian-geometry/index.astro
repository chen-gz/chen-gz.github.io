---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allEntries = await getCollection('riemannian-geometry', ({ id }) => {
  return !id.startsWith('datalab-') && id !== 'table-of-contents.md' && !id.endsWith('/_index.md');
});

const entries = allEntries.sort(
  (a, b) => a.slug.localeCompare(b.slug)
);
---

<Layout title="Riemannian Geometry">
  <main class="container mx-auto p-4 md:p-8">
    <h1 class="text-4xl font-bold text-center mb-8 text-gray-900 dark:text-gray-100">Riemannian Geometry</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {entries.map((entry) => (
          <a href={`/riemannian-geometry/${entry.slug}/`} class="block bg-white dark:bg-gray-800 rounded-lg shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-300 overflow-hidden border border-gray-100 dark:border-gray-700">
            <div class="p-6">
              <h2 class="text-2xl font-bold mb-2 capitalize text-gray-800 dark:text-gray-200">{entry.data.title || entry.slug.replace(/-/g, ' ')}</h2>
              <div class="flex justify-between items-center text-sm text-gray-500 dark:text-gray-400">
                <span class="text-blue-500 dark:text-blue-400 group-hover:underline">Read More &rarr;</span>
              </div>
            </div>
          </a>
        )
      )}
    </div>
  </main>
</Layout>
