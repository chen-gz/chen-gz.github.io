---
import Layout from "./Layout.astro";
import Sidebar from "../components/Sidebar.astro";
import { CollectionEntry } from "astro:content";

type AnyCollectionEntry = CollectionEntry<"blog" | "riemannian-geometry" | "codeforces">;

interface Props {
    chapters: AnyCollectionEntry[];
    currentPage: AnyCollectionEntry;
    collection: "blog" | "riemannian-geometry" | "codeforces";
}

const { chapters, currentPage, collection } = Astro.props;
---

<Layout>
    <main class="w-full p-4">
        <div class="prose prose-custom dark:prose-invert max-w-none mx-auto">
            <slot />
        </div>
    </main>
    <button id="sidebar-toggle" class="fixed bottom-4 left-4 bg-gray-800 text-white p-2 rounded-full shadow-lg z-50">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
    </button>
    <aside
        id="sidebar"
        class="fixed w-64 bg-white dark:bg-gray-800 z-40 shadow-lg rounded-lg p-4 hidden max-h-96 overflow-y-auto"
    >
        <Sidebar chapters={chapters} currentPage={currentPage} collection={collection} />
    </aside>
    <script>
        const sidebar = document.getElementById("sidebar");
        const toggleButton = document.getElementById("sidebar-toggle");

        const openMenu = () => {
            const btnRect = toggleButton.getBoundingClientRect();
            // Position the menu above the button
            sidebar.style.left = `${btnRect.left}px`;
            sidebar.style.bottom = `${window.innerHeight - btnRect.top}px`;
            sidebar.classList.remove("hidden");
        };

        const closeMenu = () => {
            sidebar.classList.add("hidden");
        };

        toggleButton.addEventListener("click", (e) => {
            e.stopPropagation();
            if (sidebar.classList.contains("hidden")) {
                openMenu();
            } else {
                closeMenu();
            }
        });

        document.addEventListener("click", (e) => {
            if (!sidebar.contains(e.target) && !toggleButton.contains(e.target)) {
                closeMenu();
            }
        });
    </script>
    <script>
        document.addEventListener("copy", (event) => {
            const selection = document.getSelection();
            if (selection.rangeCount === 0) return;

            const range = selection.getRangeAt(0);
            const clonedSelection = range.cloneContents();
            
            let copiedText = "";

            function traverse(node) {
                if (node.nodeType === Node.TEXT_NODE) {
                    copiedText += node.textContent;
                } else if (node.nodeType === Node.ELEMENT_NODE && (node.classList.contains('katex') || node.classList.contains('katex-display'))) {
                    const annotation = node.querySelector('annotation, annotation[encoding="application/x-tex"]');
                    if (annotation) {
                        let latexSource = annotation.textContent;
                        if (node.classList.contains('katex-display')) {
                            copiedText += `$$${latexSource}$$`;
                        } else {
                            copiedText += `$${latexSource}$`;
                        }
                    }
                } else if (node.nodeType === Node.ELEMENT_NODE && node.closest('pre')) {
                    copiedText += node.closest('pre').innerText;
                }
                else if (node.nodeType === Node.ELEMENT_NODE) {
                    node.childNodes.forEach(traverse);
                }
            }

            const container = document.createElement("div");
            container.appendChild(clonedSelection);
            traverse(container);

            if (copiedText) {
                event.clipboardData.setData("text/plain", copiedText);
                event.preventDefault();
            }
        });
    </script>
</Layout>
